<section class="content box has-background-success-light">
  <form action="/dashboard/addspot" method="POST">
    <label class="label">New Spot:</label>
    <div class="field is-grouped-horizontal">
      <div class="field-body">
        <div class="field is-narrow">
          <input class="input is-success" type="text" placeholder="Enter name" name="name" required/>
        </div>
        <div class="control">
          <div class="select">
            <select class="input is-link is-rounded" name="category">
              <option value="Other">Choose Category</option>
              <option value="Locale">Locale</option>
              <option value="Scenery">Scenery</option>
              <option value="Shopping">Shopping</option>
              <option value="Structure">Structure</option>
              <option value="Attraction">Attraction</option>
              <option value="ReligiousSite">Religious Site</option>
              <option value="OutdoorActivity">Outdoor Activity</option>
            </select>
          </div>
        </div>
        <div class="field is-narrow"></div>
        <div class="field is-narrow">
          <input class="input is-warning is-rounded" type="number" min="-90" max="90" step="0.00001" placeholder="Latitude" name="latitude" required/>
        </div>
        <div class="field is-narrow">
          <input class="input is-warning is-rounded" type="number" min="-180" max="180" step="0.00001" placeholder="Longitude" name="longitude" required/>
        </div>
      </div>
    </div>
    <div class="field">
      <input class="input is-success" type="text" placeholder="Enter description" name="description" />
    </div>
    <button class="button is-info is-rounded">Add Spot</button>
  </form>
</section>