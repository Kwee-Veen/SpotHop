<section class="content box has-background-info-light">
  <table class="table is-fullwidth has-background-info-light">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td>
            {{spot.name}}
          </td>
          <td>
            {{spot.category}}
          </td>
          <td>
            {{spot.description}}
          </td>
        </tr>
    </tbody>
  </table>
  <form action="/spot/{{spot._id}}/editspot" method="POST">
    <label class="label">Edit Spot Details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input is-success" type="text" placeholder="Enter name" name="name" />
        </div>
        <div class="control">
          <div class="select">
            <select class="input is-success" name="category">
              <option value="Other">Choose Category</option>
              <option value="Locale">Locale</option>
              <option value="Scenery">Scenery</option>
              <option value="Shopping">Shopping</option>
              <option value="Structure">Structure</option>
              <option value="Attraction">Attraction</option>
              <option value="ReligiousSite">Religious Site</option>
              <option value="OutdoorActivity">Outdoor Activity</option>
            </select>
          </div>
        </div>
        <div class="field">
          <input class="input is-success" type="text" placeholder="Enter description" name="description" />
        </div>
      </div>
    </div>
    <button class="button is-warning">Edit Spot</button>
  </form>
</section>