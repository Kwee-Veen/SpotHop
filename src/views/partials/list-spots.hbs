<section class="content box has-background-success-light">
  <table class="table is-fullwidth is-hoverable has-background-success-light">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th><tag class="has-text-info"> Edit</tag></th>
        <th><tag class="has-text-danger">Delete</tag></th>
      </tr>
    </thead>
    <tbody>
      {{#each spots}}
        <tr>
          <td>
            {{name}}
          </td>
          <td>
            {{category}}
          </td>
          <td>
            {{description}}
          </td>
          <td>
            <a href="/spot/{{_id}}" class="button">
              <span class="icon is-small">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
